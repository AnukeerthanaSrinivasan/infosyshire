const mongoose = require("mongoose");

const TaskSchema = new mongoose.Schema({
  userId: { type: mongoose.Schema.Types.ObjectId, ref: "User" },
  title: String,
  description: String,
  location: String,
  startTime: Date,
  endTime: Date,
  status: { type:Number , default: "open" },
  category: String,
  picture: String
});

module.exports = mongoose.model("Task", TaskSchema);
